@model Pitstop.ViewModels.VehicleOwnerManagementNewViewModel
@{
    ViewData["Title"] = "Register Owner";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Vehicle Owner Management - Register Owner</h3>

<form asp-controller="VehicleOwnerManagement" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Owner.RazonSocial"></label>
        <input asp-for="Owner.RazonSocial" type="text" class="form-control" />
        <span asp-validation-for="Owner.RazonSocial" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.CIF"></label>
        <input asp-for="Owner.CIF" type="text" class="form-control" />
        <span asp-validation-for="Owner.CIF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.Direccion"></label>
        <input asp-for="Owner.Direccion" type="text" class="form-control" />
        <span asp-validation-for="Owner.Direccion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.Contacto"></label>
        <input asp-for="Owner.Contacto" type="text" class="form-control" />
        <span asp-validation-for="Owner.Contacto" class="text-danger"></span>
    </div>

    <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="VehicleOwnerManagement" class="btn btn-default">Cancel</a></span>
</form>


