@model Pitstop.ViewModels.VehicleInsuranceManagementViewModel
@{
    ViewData["Title"] = "Insurance Overview";
}
<h3 id="PageTitle">Vehicle Insurance Management - Overview</h3>

<table class="table">
    <thead>
        <tr>
            <th>Compañía</th>
            <th>Poliza</th>
            <th>Corredor</th>
            <th>Fecha Alta</th>
            <th>Fecha Vencimiento</th>
            <th>Importe</th>
            <th>Tipo</th>
            <th>Vehículo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insurance in Model.Insurances)
        {
        <tr>
            <td>@insurance.Nombre</td>
            <td>@insurance.Poliza</td>
            <td>@insurance.Corredor</td>
            <td>@insurance.FechaAlta</td>
            <td>@insurance.FechaVencimiento</td>
            <td>@insurance.Importe</td>
            <td>@insurance.Tipo</td>
            <td><a href='@(Url.Action("Details", "VehicleManagement", new { id = insurance.VehicleId }))'>@insurance.VehicleId</a></td>
            <td><a id="EditInsuranceButton" onclick="location.href = '@(Url.Action("Details", "VehicleInsuranceManagement", new { id = insurance.InsuranceId }))'" class="btn-info">Edit Insurance</a></td>
            <td><a id="DeleteCustomerButton" onclick="location.href = '@(Url.Action("Delete", "VehicleInsuranceManagement", new { id = insurance.InsuranceId }))'" class="btn-danger">Delete Insurance</a></td>
        </tr>
        }
    </tbody>
</table>
<a id="RegisterInsuranceButton" asp-action="New" asp-controller="VehicleInsuranceManagement" class="btn btn-default">Register Insurance</a>


