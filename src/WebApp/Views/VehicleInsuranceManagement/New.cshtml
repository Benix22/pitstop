@model Pitstop.ViewModels.VehicleInsuranceManagementNewViewModel
@{
    ViewData["Title"] = "Register Insurance";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Vehicle Insurance Management - Register Insurance</h3>

<form asp-controller="VehicleOwnerManagement" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Insurance.Nombre"></label>
        <input asp-for="Insurance.Nombre" type="text" class="form-control" />
        <span asp-validation-for="Insurance.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.Poliza"></label>
        <input asp-for="Insurance.Poliza" type="text" class="form-control" />
        <span asp-validation-for="Insurance.Poliza" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.Corredor"></label>
        <input asp-for="Insurance.Corredor" type="text" class="form-control" />
        <span asp-validation-for="Insurance.Corredor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.FechaAlta"></label>
        <input asp-for="Insurance.FechaAlta" type="text" class="form-control" />
        <span asp-validation-for="Insurance.FechaAlta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.FechaVencimiento"></label>
        <input asp-for="Insurance.FechaVencimiento" type="text" class="form-control" />
        <span asp-validation-for="Insurance.FechaVencimiento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.Importe"></label>
        <input asp-for="Insurance.Importe" type="text" class="form-control" />
        <span asp-validation-for="Insurance.Importe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.Tipo"></label>
        <input asp-for="Insurance.Tipo" type="text" class="form-control" />
        <span asp-validation-for="Insurance.Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurance.VehicleId"></label>
        <select asp-for="Insurance.VehicleId" asp-items="Model.Vehicles" class="form-control"></select>
        <span asp-validation-for="Insurance.VehicleId" class="text-danger"></span>
    </div>

    <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="VehicleOwnerManagement" class="btn btn-default">Cancel</a></span>
</form>


