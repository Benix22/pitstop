@model Pitstop.ViewModels.ContractManagement.ContractManagementDetailsViewModel
@{
    ViewData["Title"] = "Vat Details";
}
<h3 id="PageTitle">Contract Management - Vat Details</h3>

<form asp-controller="VatManagement" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Vat.Nombre"></label>
        <input asp-for="Vat.Nombre" type="text" class="form-control" />
        <span asp-validation-for="Vat.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vat.Tipo"></label>
        <input asp-for="Vat.Tipo" type="text" class="form-control" />
        <span asp-validation-for="Vat.Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vat.Current"></label>
        <input asp-for="Vat.Current" type="checkbox" class="form-control" />
        <span asp-validation-for="Vat.Current" class="text-danger"></span>
    </div>
    @Html.HiddenFor(x => x.Vat.VatId)
    <span><button id="SubmitButton" type="submit" class="btn btn-default">Update</button></span>
    <span><a id="BackButton" asp-action="Index" asp-controller="VatManagement" class="btn btn-default">Back</a></span>
</form>

