@model Pitstop.ViewModels.ContractManagement.ContractManagementNewViewModel
@{
    ViewData["Title"] = "Register Vat";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Contract Management - Register Vat</h3>

<form asp-controller="VatManagement" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Vat.Nombre"></label>
        <input asp-for="Vat.Nombre" type="text" class="form-control" />
        <span asp-validation-for="Vat.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vat.Tipo"></label>
        <input asp-for="Vat.Tipo" type="text" class="form-control" />
        <span asp-validation-for="Vat.Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vat.Current"></label>
        <input asp-for="Vat.Current" type="checkbox" class="form-control" />
        <span asp-validation-for="Vat.Current" class="text-danger"></span>
    </div>
    <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="VatManagement" class="btn btn-default">Cancel</a></span>
</form>
