@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PitStop</title>
    <link rel="stylesheet" href="../../wwwroot/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="../../wwwroot/css/site.css" />
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
          asp-fallback-href="../../wwwroot/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <link rel="stylesheet" href="../../wwwroot/css/site.min.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="../../wwwroot/css/style.css" />

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <nav class="navbar fixed-top navbar-light navbar-expand-lg navbar-template">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">PitStop</a>
        <div class="d-flex flex-row order-2 order-lg-3">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown">
                <span class="glyphicon glyphicon-menu-hamburger"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse order-3 order-lg-2" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.Home" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.CustomerManagement" asp-area="" asp-controller="CustomerManagement" asp-action="Index">Customers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.VehicleOwnerManagement" asp-area="" asp-controller="VehicleOwnerManagement" asp-action="Index">Vehicle Owner</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.VehicleInsuranceManagement" asp-area="" asp-controller="VehicleInsuranceManagement" asp-action="Index">Vehicle Insurance</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.VehicleManagement" asp-area="" asp-controller="VehicleManagement" asp-action="Index">Vehicle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.WorkshopManagement" asp-area="" asp-controller="WorkshopManagement" asp-action="Index">Workshop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.ContractManagement" asp-area="" asp-controller="ContractManagement" asp-action="Index">Rate</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="MainMenu.About" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto navbar-right">
                <!-- no sé si va a serte de utilidad, elimínalo si no te hace falta -->
                <li class="nav-item">
                    <a class="nav-link" href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <h3 id="PageTitle">Vehicle Insurance Management - Register Insurance</h3>
        <form asp-controller="VehicleOwnerManagement" asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="Insurance.Nombre">Nombre:</label>
                <input asp-for="Insurance.Nombre" type="text" class="form-control" />
                <span asp-validation-for="Insurance.Nombre" class="text-danger">error</span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Poliza">Poliza:</label>
                <input asp-for="Insurance.Poliza" type="text" class="form-control" />
                <span asp-validation-for="Insurance.Poliza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Corredor">Corredor:</label>
                <input asp-for="Insurance.Corredor" type="text" class="form-control" />
                <span asp-validation-for="Insurance.Corredor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.FechaAlta">Fecha alta:</label>
                <input asp-for="Insurance.FechaAlta" type="text" class="form-control" />
                <span asp-validation-for="Insurance.FechaAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.FechaVencimiento">Fecha vencimiento: </label>
                <input asp-for="Insurance.FechaVencimiento" type="text" class="form-control" />
                <span asp-validation-for="Insurance.FechaVencimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Importe">Importe: </label>
                <input asp-for="Insurance.Importe" type="text" class="form-control" />
                <span asp-validation-for="Insurance.Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.Tipo">Tipo:</label>
                <input asp-for="Insurance.Tipo" type="text" class="form-control" />
                <span asp-validation-for="Insurance.Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Insurance.VehicleId">ID VEHICULO</label>
                <select asp-for="Insurance.VehicleId" asp-items="Model.Vehicles" class="form-control"></select>
                <span asp-validation-for="Insurance.VehicleId" class="text-danger"></span>
            </div>
            <span><button id="SubmitButton" type="submit" class="btn btn-default">Register</button></span>
            <span><a id="CancelButton" asp-action="Index" asp-controller="VehicleOwnerManagement" class="btn btn-default">Cancel</a></span>
        </form>
        <h3 id="PageTitle">Vehicle Insurance Management - Overview</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Compañía</th>
                    <th>Poliza</th>
                    <th>Corredor</th>
                    <th>Fecha Alta</th>
                    <th>Fecha Vencimiento</th>
                    <th>Importe</th>
                    <th>Tipo</th>
                    <th>Vehículo</th>
                </tr>
            </thead>
            <tbody>
                <tr class="clickable">
                    <td>@insurance.Nombre</td>
                    <td>@insurance.Poliza</td>
                    <td>@insurance.Corredor</td>
                    <td>@insurance.FechaAlta</td>
                    <td>@insurance.FechaVencimiento</td>
                    <td>@insurance.Importe</td>
                    <td>@insurance.Tipo</td>
                    <td><a href='#'>@insurance.VehicleId</a></td>
                </tr>
            </tbody>
        </table>
        <a id="RegisterInsuranceButton" asp-action="New" asp-controller="VehicleInsuranceManagement" class="btn btn-default">Register Insurance</a>
        <h3 id="PageTitle">Vehicle Insurance Management - Details</h3>
        <table class="table">
            <tbody>
                <tr>
                    <td width="150">Compañia :</td>
                    <td><b>@Model.Insurance.Nombre</b></td>
                </tr>
                <tr>
                    <td width="150">Nº Poliza :</td>
                    <td><b>@Model.Insurance.Poliza</b></td>
                </tr>
                <tr>
                    <td width="150">Corredor :</td>
                    <td><b>@Model.Insurance.Corredor</b></td>
                </tr>
                <tr>
                    <td width="150">FechaAlta :</td>
                    <td><b>@Model.Insurance.FechaAlta</b></td>
                </tr>
                <tr>
                    <td width="150">FechaVencimiento :</td>
                    <td><b>@Model.Insurance.FechaVencimiento</b></td>
                </tr>
                <tr>
                    <td width="150">Importe :</td>
                    <td><b>@Model.Insurance.Importe</b></td>
                </tr>
                <tr>
                    <td width="150">Tipo :</td>
                    <td><b>@Model.Insurance.Tipo</b></td>
                </tr>
                <tr>
                    <td width="150">Vehículo :</td>
                    <td><b>@string.Format("{0} {1} ({2})", Model.Vehicle.Marca, Model.Vehicle.Modelo, Model.Vehicle.Matricula)</b></td>
                </tr>
            </tbody>
        </table>
        <span><a id="BackButton" asp-action="Index" asp-controller="VehicleInsuranceManagement" class="btn btn-default">Back</a></span>
        <h3 id="PageTitle">Vehicle Insurance Management - Offline</h3>
        <p>Unfortunately the vehicle insurance management module is offline at the moment. Try again soon.</p>
        <hr />
        <footer>
            <p>&copy; 2017 - PitStop</p>
        </footer>
    </div>
    <script src="../../wwwroot/lib/jquery/dist/jquery.js"></script>
    <script src="../../wwwroot/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="../../wwwroot/js/site.js" asp-append-version="true"></script>


    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
